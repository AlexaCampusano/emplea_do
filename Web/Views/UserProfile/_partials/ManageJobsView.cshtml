@model List<Domain.Entities.Job>

<!-- Manage jobs -->
<div class="tab-pane active" id="manage-jobs">

    <div class="tr-single-box">
        <div class="tr-single-header">
            <h4><i class="lni-file"></i> Manejar empleos</h4>
        </div>

        <div class="tr-single-body">
            <div class="row">

                <div class="col-md-12">
                    @foreach (var job in Model)
                    {
                        <!-- Single Manage job -->
                        <div class="manage-list">

                            <div class="mg-list-wrap">
                                <div class="mg-list-thumb">
                                    <img class="img-fluid rounded-circle" src="@job.Company.LogoUrl"  alt="@job.Company.Name"/>
                                </div>
                                <div class="mg-list-caption">
                                    <h4 class="mg-title">@job.Title</h4>
                                    <span class="mg-subtitle">Web Designer</span>
                                    <span><em>Fecha de publicación</em> @job.PublishedDate.ToString("dd/MM/yyyy")</span>
                                </div>
                            </div>

                            <div class="mg-action">
                                <span class="badge badge-danger">Sin publicar</span>
                                <div class="btn-group ml-2">
                                    <a class="btn btn-info" asp-controller="jobs" asp-action="wizard" asp-route-id="@job.Id" ><i class="ti-pencil-alt"></i></a>

                                    <a href="#" class="mg-delete"><i class="ti-trash"></i></a>
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- /Manage jobs -->

    <a href="#" class="btn btn-info btn-md full-width">Save & Update<i class="ml-2 ti-arrow-right"></i></a>

</div>